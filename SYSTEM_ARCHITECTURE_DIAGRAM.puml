@startuml System Architecture Diagram
!theme plain
skinparam component {
    BackgroundColor lightblue
    BorderColor black
}

skinparam package {
    BackgroundColor lightyellow
    BorderColor darkblue
}

title System Architecture Diagram - VetVoge & Eagle's Vet Clinic

package "G1: Marketplace Browsing" {
    component [Welcome Page] as C1
    component [Clinic Cards] as C2
    C1 --> C2
}

package "G2: Pet Adoption" {
    component [Post Adoption] as C3
    component [View Listings] as C4
    C3 --> C4
}

package "G3: E-Commerce" {
    component [Product Catalog] as C5
    component [Shopping Cart] as C6
    component [Order Processing] as C7
    C5 --> C6
    C6 --> C7
}

package "G4: User Management" {
    component [Authentication] as C8
    component [Profile Management] as C9
    component [Session Control] as C10
    C8 --> C10
    C9 --> C10
}

package "G5: Pet Management" {
    component [Pet Profiles] as C11
    component [Medical Records] as C12
    C11 --> C12
}

package "G6: Appointment Management" {
    component [Booking] as C13
    component [Scheduling] as C14
    C13 --> C14
}

package "G7: Hotel Booking" {
    component [Room Management] as C15
    component [Reservations] as C16
    component [Checkout] as C17
    C15 --> C16
    C16 --> C17
}

package "G8: Admin Dashboard" {
    component [Management Interface] as C18
    component [Data Control] as C19
    C18 --> C19
}

package "G9: Analytics" {
    component [Tracking] as C20
    component [Reporting] as C21
    C20 --> C21
}

package "G10: Security" {
    component [Validation] as C22
    component [Protection] as C23
    C22 --> C23
}

' Key inter-subsystem connections
C10 --> C1 : session
C10 --> C5 : auth
C10 --> C11 : user data
C10 --> C13 : user data
C10 --> C16 : user data
C10 --> C18 : admin auth

C5 --> C1 : navigation
C7 --> C10 : user data
C11 --> C13 : pet selection
C11 --> C16 : pet selection
C18 --> C5 : manage products
C18 --> C7 : manage orders
C18 --> C11 : manage pets
C18 --> C14 : manage appointments
C18 --> C16 : manage reservations
C21 --> C7 : order analytics
C21 --> C14 : appointment analytics
C21 --> C17 : hotel analytics

C22 --> C8 : validate
C23 --> C8 : protect
C22 --> C5 : validate
C23 --> C5 : protect

@enduml
