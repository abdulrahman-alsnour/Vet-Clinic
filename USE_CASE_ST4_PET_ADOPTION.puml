@startuml Use Case Diagram - Pet Adoption Community
!theme plain
skinparam usecase {
    BackgroundColor #E3F2FD
    BorderColor #1976D2
    FontSize 12
    FontStyle bold
}

skinparam actor {
    BackgroundColor #FFF9C4
    BorderColor #F57F17
    FontSize 14
    FontStyle bold
}

skinparam rectangle {
    BackgroundColor white
    BorderColor #424242
    FontSize 13
    FontStyle bold
}

title Use Case Diagram - Pet Adoption Community (ST4)

left to right direction

actor "ST4 : Pet Adoption Community" as Adopter

rectangle System {
    usecase "Post Pet for Adoption" as UC1
    usecase "Upload Pet Images" as UC2
    usecase "Enter Pet Information" as UC3
    usecase "View Adoption Listings" as UC4
    usecase "Browse Pet Images" as UC5
    usecase "View Full Size Images" as UC6
    usecase "Contact Owner by Phone" as UC7
}

Adopter --> UC1
Adopter --> UC2
Adopter --> UC3
Adopter --> UC4
Adopter --> UC5
Adopter --> UC6
Adopter --> UC7

@enduml
